<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.meicorl.shopping_mall_miniapp.mybatis.dao.UserDao">
    <insert id="saveUser" useGeneratedKeys="true" keyProperty="id" parameterType="User">
        insert into t_user_info(openid, phone, nick_name, sex, head_img, create_time)
        values (#{openid}, #{phone}, #{nick_name}, #{sex}, #{head_img}, #{create_time})
    </insert>
    <select id="getUserByOpenId" resultType="com.meicorl.shopping_mall_miniapp.mybatis.pojo.User">
        select * from t_user_info
        where openid = #{openid}
    </select>

</mapper>